<h3>Add comments</h3>
<% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |msg| %>
        <%= msg %>
    <% end %>
<% end %>
<%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
        <%= f.label :username %><br/>
        <%= f.text_field(:username, {:class => 'form-control'}) %>

    </p>
    <p>
        <%= f.label :body %>
        <%= f.text_area(:body, {:class => 'form-control'}) %>
    </p>
    <p>
        <%= f.submit({:class => 'btn btn-success'}) %>
    </p>
<% end %>
