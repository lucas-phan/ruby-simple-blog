<h3><%= t("comments") %></h3>
<% @post.comments.each do |comment| %>
    <div class="well">
        <p><strong><%= comment.username %></strong>:
            <%= comment.body %>
            <%= link_to "[X]", [comment.post, comment],
                        method: :delete,
                        data: {confirm: t("confirm_delete")},
                        :class => "btn btn-danger btn-sm" %>
        </p>

    </div>

<% end %>
