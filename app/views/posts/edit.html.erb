<h1>Edit post</h1>
<% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |msg| %>
        <%= msg %>
    <% end %>
<% end %>
<%= form_for :post, url: post_path(@post), method: :patch do |f| %>
    <p>
        <%= f.label :title %><br/>
        <%= f.text_field(:title, {:class => 'form-control'}) %>

    </p>
    <p>
        <%= f.label :body %>
        <%= f.text_area(:body, {:class => 'form-control'}) %>
    </p>
    <p>
        <%= f.submit({:class => 'btn btn-success'}) %>
    </p>
<% end %>
